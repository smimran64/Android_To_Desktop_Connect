<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.desktopdatareceiver.controller.ConnectionController"
            style="-fx-background-color: linear-gradient(to bottom right, #1a1a2e, #16213e);">

    <top>
        <HBox alignment="CENTER" style="-fx-padding: 30 0 10 0;">
            <Label text="DESKTOP DATA RECEIVER"
                   style="-fx-font-size: 26px;
                          -fx-font-family: 'Segoe UI Semibold';
                          -fx-text-fill: #e94560;
                          -fx-letter-spacing: 2px;">
                <effect>
                    <DropShadow color="#e94560" radius="10" spread="0.2"/>
                </effect>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER">
            <VBox spacing="20" alignment="CENTER"
                  maxWidth="450"
                  style="-fx-padding: 40;
                         -fx-background-color: rgba(255, 255, 255, 0.05);
                         -fx-background-radius: 20;
                         -fx-border-color: rgba(255, 255, 255, 0.1);
                         -fx-border-radius: 20;
                         -fx-border-width: 1;">

                <Label text="Connection Settings"
                       style="-fx-font-size: 18px; -fx-text-fill: #ffffff; -fx-font-weight: bold;" />

                <TextField fx:id="ipField" promptText="IP Address"
                           style="-fx-background-color: #0f3460; -fx-text-fill: white;
                                  -fx-prompt-text-fill: #888; -fx-background-radius: 10;
                                  -fx-padding: 12; -fx-border-color: #e94560; -fx-border-radius: 10;"/>

                <TextField fx:id="portField" promptText="Port" text="3005"
                           style="-fx-background-color: #0f3460; -fx-text-fill: white;
                                  -fx-prompt-text-fill: #888; -fx-background-radius: 10;
                                  -fx-padding: 12; -fx-border-color: #e94560; -fx-border-radius: 10;"/>

                <Button fx:id="connectDbBtn" text="Connect Database" maxWidth="Infinity"
                        style="-fx-background-color: #00d2ff; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 12;
                               -fx-cursor: hand;"/>

                <Button fx:id="startServerBtn" text="Start Server" maxWidth="Infinity"
                        style="-fx-background-color: #e94560; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 12;
                               -fx-cursor: hand;"/>

                <Button text="Open Data Page" onAction="#openDataPage" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #00d2ff;
                               -fx-font-weight: bold; -fx-border-color: #00d2ff;
                               -fx-border-radius: 12; -fx-padding: 11; -fx-cursor: hand;"/>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <VBox style="-fx-padding: 20;">
            <Label text="System Logs" style="-fx-text-fill: #888; -fx-padding: 0 0 5 10; -fx-font-size: 12px;"/>
            <TextArea fx:id="logArea"
                      prefHeight="120"
                      editable="false"
                      style="-fx-control-inner-background: #1a1a2e;
                             -fx-text-fill: #00ff41;
                             -fx-font-family: 'Consolas';
                             -fx-background-color: transparent;
                             -fx-border-color: #333;
                             -fx-border-radius: 5;"/>
        </VBox>
    </bottom>

</BorderPane>