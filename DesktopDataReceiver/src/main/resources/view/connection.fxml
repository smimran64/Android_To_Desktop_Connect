<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.desktopdatareceiver.controller.ConnectionController"
            prefWidth="1200" prefHeight="720"
            style="-fx-background-color: linear-gradient(to bottom right, #1a1a2e, #16213e);">

    <!-- ================= HEADER ================= -->
    <top>
        <VBox alignment="CENTER" spacing="5" style="-fx-padding: 25;">
            <Label text="âš¡ IGNITE"
                   style="-fx-font-size: 30px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #e94560;"/>

            <Label text="Communication Server â€“ Desktop Manager"
                   style="-fx-text-fill: #aaa;
                          -fx-font-size: 16px;"/>
        </VBox>
    </top>

    <!-- ================= CENTER ================= -->
    <center>
        <HBox alignment="CENTER"
              spacing="40"
              style="-fx-padding: 40;">

            <!-- DATABASE CARD -->
            <VBox spacing="16"
                  minWidth="420"
                  maxWidth="420"
                  prefHeight="300"
                  alignment="TOP_LEFT"
                  style="-fx-background-color: rgba(255,255,255,0.08);
             -fx-background-radius: 18;
             -fx-padding: 25;">

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Circle fx:id="dbStatusDot" radius="6"/>
                    <Label fx:id="dbStatusText"
                           text="DB Disconnected"
                           style="-fx-text-fill: white;
                           -fx-font-size: 18px;
                      -fx-font-weight: bold;"/>
                </HBox>

                <TextField fx:id="ipField"
                           promptText="Database Host / IP"
                           style="-fx-font-size: 18px;"

                />

                <TextField fx:id="portField"
                           promptText="Port"
                           style="-fx-font-size: 18px;"
                           text="3005"/>

                <Button fx:id="connectDbBtn"
                        text="Connect Database"
                        maxWidth="Infinity"
                        style="-fx-background-color: #00d2ff;
                   -fx-text-fill: white;
                   -fx-font-weight: bold;
                   -fx-font-size: 18px;
                   -fx-cursor: hand;"/>

                <!-- ðŸ”¥ NEW BUTTON -->
                <Button fx:id="openDbBtn"
                        text="Open Database Table"
                        maxWidth="Infinity"
                        disable="true"
                        onAction="#openDatabasePage"
                        style="-fx-background-color: transparent;
                   -fx-text-fill: #00ff9c;
                   -fx-border-color: #00ff9c;
                   -fx-border-radius: 10;
                   -fx-font-weight: bold;
                   -fx-font-size: 18px;
                   -fx-cursor: hand;"/>
            </VBox>


            <!-- ===== SERVER CARD ===== -->
            <VBox spacing="16"
                  minWidth="420"
                  maxWidth="420"
                  prefHeight="300"
                  alignment="TOP_LEFT"
                  style="-fx-background-color: rgba(255,255,255,0.08);
                         -fx-background-radius: 18;
                         -fx-padding: 25;">

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Circle fx:id="serverStatusDot" radius="6"/>
                    <Label fx:id="serverStatusText"
                           text="Server Stopped"
                           style="-fx-text-fill: white;
                           -fx-font-size: 18px;
                                  -fx-font-weight: bold;"/>
                </HBox>

                <Label text="Received Messages:"
                       style="-fx-text-fill: #aaa;
                               -fx-font-size: 18px;"/>

                <Label fx:id="counterLabel"
                       text="0"
                       style="-fx-font-size: 32px;
                              -fx-text-fill: #00ff9c;
                              -fx-font-weight: bold;"/>

                <Button fx:id="startServerBtn"
                        text="Start Server"
                        maxWidth="Infinity"
                        style="-fx-background-color: #e94560;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-font-size: 18px;
                               -fx-cursor: hand;"/>
            </VBox>

        </HBox>
    </center>

    <!-- ================= LOG AREA ================= -->
    <bottom>
        <VBox style="-fx-padding: 20;">
            <Label text="System Logs"
                   style="-fx-text-fill: #888;
                           -fx-font-size: 16px;
                          -fx-padding: 0 0 6 5;"/>

            <TextArea fx:id="logArea"
                      prefHeight="160"
                      editable="false"
                      wrapText="true"
                      style="-fx-control-inner-background: #0b0f2a;
                             -fx-text-fill: #00ff9c;
                             -fx-font-size: 14px;
                             -fx-font-family: Consolas;
                             -fx-border-radius: 6;"/>
        </VBox>
    </bottom>

</BorderPane>
