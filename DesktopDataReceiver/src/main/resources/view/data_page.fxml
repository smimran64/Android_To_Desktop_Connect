<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.desktopdatareceiver.controller.DataPageController"
            style="-fx-background-color: #f4f6f9;">

    <top>
        <Label text="Received Data"
               alignment="CENTER"
               style="-fx-font-size: 18px;
                -fx-font-weight: bold;
                 -fx-cursor: hand;
                 -fx-padding: 15;" />
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 20;">

            <TableView fx:id="tableView"
                       style="-fx-background-color: white;">

                <columns>
                    <TableColumn fx:id="idCol"
                                 text="ID"
                                 prefWidth="100"/>

                    <TableColumn fx:id="dataCol"
                                 text="Message"
                                 prefWidth="400"/>
                </columns>

            </TableView>

        </VBox>
    </center>

</BorderPane>
