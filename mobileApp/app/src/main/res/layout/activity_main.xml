<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/main_gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_message"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Sender Pro"
            android:textSize="28sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#090909"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send instant data to your desktop"
            android:textColor="#7C7C8C"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_margin="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:text="IP Address"
                    android:textColor="#4A90E2"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/bg_input_modern"
                    android:padding="12dp"
                    android:gravity="center_vertical">
                    <ImageView

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_ip"
                        android:alpha="0.6"/>
                    <EditText
                        android:id="@+id/ipField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10.0.2.2"
                        android:layout_marginStart="12dp"
                        android:background="@null"
                        android:textSize="15sp"
                        android:textColor="#2D2D2D"/>
                </LinearLayout>

                <TextView
                    android:text="Port Number"
                    android:textColor="#4A90E2"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/bg_input_modern"
                    android:padding="12dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_port"
                        android:alpha="0.6"/>
                    <EditText
                        android:id="@+id/portField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3005"
                        android:inputType="number"
                        android:layout_marginStart="12dp"
                        android:background="@null"
                        android:textSize="15sp"
                        android:textColor="#2D2D2D"/>
                </LinearLayout>

                <TextView
                    android:text="Your Message"
                    android:textColor="#4A90E2"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_input_modern"
                    android:padding="12dp"
                    android:gravity="top">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_message"
                        android:alpha="0.6"
                        android:layout_marginTop="2dp"/>
                    <EditText
                        android:id="@+id/messageField"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Write something amazing..."
                        android:layout_marginStart="12dp"
                        android:background="@null"
                        android:gravity="top"
                        android:textSize="15sp"
                        android:textColor="#2D2D2D"/>
                </LinearLayout>

                <Button
                    android:id="@+id/sendButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="SEND DATA"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_button_gradient"
                    android:layout_marginTop="30dp"
                    android:elevation="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_status"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">
            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="#4CAF50"
                android:layout_gravity="center"
                android:backgroundTint="#4CAF50" />
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System Ready"
                android:textColor="#2E7D32"
                android:layout_marginStart="8dp"
                android:textSize="13sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>